! colorscheme
#include "/home/noval/.Xresources-gruvbox"

! {{{xft settings
Xft.dpi:       96
Xft.antialias: true
Xft.hinting:   true
Xft.rgba:      rgb
Xft.autohint:  true
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault
!}}}

! {{{Urxvt settings
!*.font:                     Hack Nerd Font Mono:style=Regular:size=10.5
URxvt.font:                 xft:Hack Nerd Font Mono:style=Regular:size=10.5
!URxvt.letterSpace:          -1
URxvt.depth:                32
URxvt*scrollBar:            false 
URxvt*mouseWheelScrollPage: false
URxvt*cursorBlink:          true      
URxvt*saveLines:            5000
URxvt.geometry:							92x24
! URxvt.internalBorder:				10 

URxvt.iso10755:                   false
URxvt.keysym.Control-Left:        \033[1;5D
URxvt.keysym.Shift-Control-Left:  \033[1;6D
URxvt.keysym.Control-Right:       \033[1;5C
URxvt.keysym.Shift-Control-Right: \033[1;6C
URxvt.keysym.Control-Up:          \033[1;5A
URxvt.keysym.Shift-Control-Up:    \033[1;6A
URxvt.keysym.Control-Down:        \033[1;5B
URxvt.keysym.Shift-Control-Down:  \033[1;6B

URxvt.perl-ext-common:           default,url-select,keyboard-select,clipboard
URxvt.keysym.Shift-Control-C:    perl:clipboard:copy
URxvt.keysym.Shift-Control-V:    perl:clipboard:paste
URxvt.keysym.M-C-v:              perl:clipboard:paste_escaped
URxvt.keysym.M-Escape:           perl:keyboard-select:activate
URxvt.keysym.M-s:                perl:keyboard-select:search
URxvt.url-select.launcher:       qutebrowser
URxvt.keysym.M-u:                perl:url-select:select_next
URxvt.url-select.autocopy:       true 
URxvt.url-select.underline:      true 
!}}}
