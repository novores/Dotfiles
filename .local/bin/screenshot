#!/sbin/bash

timestamp="$(date +%Y%m%d%H%M%S)"
targetbase="$HOME/Images/Screenshots"
mkdir -p $targetbase
[ -d $targetbase ] || exit 1
scrot -s $targetbase/$timestamp.png 

convert ${targetbase} +clone -background black -shadow 50x10+0+10 \
+swap -background none -layers merge +repage ${targetbase}; \
convert ${targetbase} -bordercolor white -border 30 -set gamma 2.2 \
${targetbase}
